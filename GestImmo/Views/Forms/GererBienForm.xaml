<Page x:Class="GestImmo.Views.Forms.GererBienForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestImmo.Views.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="690" d:DesignWidth="460"
      Title="GererBienForm">
    <Grid Margin="15,15,15,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="600"></RowDefinition>
        </Grid.RowDefinitions>

        <ComboBox x:Name="TypeBien" HorizontalAlignment="Left" Margin="186,0,0,0" VerticalAlignment="Center" Width="221" SelectionChanged="TypeBien_SelectionChanged">

            <ComboBoxItem Content="Box"/>
            <ComboBoxItem Content="Maison"/>
            <ComboBoxItem Content="Appartement"/>

        </ComboBox>
        <Label Content="Type de Bien" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Width="88" Height="33"/>
        <Frame x:Name="FrameAfficheForm" Margin="10,70,93,0" Grid.RowSpan="2"/>


    </Grid>
</Page>
